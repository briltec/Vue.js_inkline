//
// Variables
//
--collapsible-box-shadow := --box-shadow[0] 0.5rem 0.5rem -0.5rem rgba(--colors['black'], 0.33)

//
// Themes
//
--collapsible-variants := (monochrome)

--variants['collapsible'] = -add-variant(--collapsible-variants, { color: --color-groups })

//
// Styles
//
.collapsible
    box-shadow: --collapsible-box-shadow

    // Card themes
    // Add the required color themes to all card variations
    for --variant-name, --variant in --variants['card']
        &.-{--variant-name}
            > .header
                background-color: --variant['color']
                color: -text-color-by-luminance(--variant['color'], --variant-color-light, --variant-color-dark)

                if --gradient-enabled and --variant['gradient']
                    background-image: -linear-gradient(--variant['gradient'])