//
// Navbar Items variants
//
for --variant-name, --variant in --variants['navbar']
    .navbar.-{--variant-name} > .container > .row > .column > .items
        > .nav > .item
            color: -variant-color-by-luminance(--variant['color'], darken(--variant-color-light, 20%), lighten(--variant-color-dark, 20%))

            &.-active
            &.-focused
            &:focus
            &.-hovered
            &:hover
                color: -variant-color-by-luminance(--variant['color'], --variant-color-light, --variant-color-dark)

