@import '../../css/config'
@import '../../css/mixins'
@import '../Nav/css/_variables'
@import 'css/_sizes'

/**
 * Nav Item
 */
.nav > .item
.nav > .dropdown > .item
    display: block
    margin-bottom: 0

    &:hover
    &:focus
        text-decoration: none

    &.-disabled
        color: --nav-item-disabled-color
        pointer-events: none
        cursor: default

    &.-active
        font-weight: bold

    @extend .nav.-md > .item
