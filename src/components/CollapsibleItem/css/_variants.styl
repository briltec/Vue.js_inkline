//
// Alert variants
// Add the required color variants to all alert variations
//
for --variant-name, --variant in --variants['collapsible']
    .collapsible.-{--variant-name}
        > .item
            > .header
            > .content
                //border-color: black
                border-color: -text-color-by-luminance(--variant['color'], lighten(--variant['color'], 5%), darken(--variant['color'], 5%))
                color: -text-color-by-luminance(--variant['color'], --variant-color-light, --variant-color-dark)

            > .header
                background-color: --variant['color']

                > .icon
                    background-color: -text-color-by-luminance(--variant['color'], --variant-color-light, --variant-color-dark)

            > .content
                background-color: #fff

