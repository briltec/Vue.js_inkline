//
// Checkbox variables
//
--form-check-checkbox-icon := --icons['check']
--form-check-indeterminate-icon := --icons['minus']
--form-check-checkbox-border-radius := --border-radius

--form-check-checkbox-icon-size-sm := 6px
--form-check-checkbox-icon-size-md := 8px
--form-check-checkbox-icon-size-lg := 10px
--form-check-checkbox-icon-size := {
    sm: --form-check-checkbox-icon-size-sm
    md: --form-check-checkbox-icon-size-md
    lg: --form-check-checkbox-icon-size-lg
}