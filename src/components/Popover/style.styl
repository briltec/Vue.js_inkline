@require '../../css/config';
@require '../../css/mixins';
@require 'css/_variables';
@require 'css/_sizes';
@require 'css/_variants';

.popover-wrapper
    display: inline-block
    position: relative

.popover
    -popup({
        margin: --popover-margin,
        z-index: 2000
    })

    -popup-arrow()
    -popup-arrow-size()

    text-align: left // Ensures proper alignment if parent has it changed (e.g., modal footer)
    list-style: none
    line-height: --popover-line-height
    background-clip: padding-box
    border-width: --popover-border-width
    border-style: solid
    display: inline-block
    white-space: nowrap

    @extend .popover.-md
    @extend .popover.-dark