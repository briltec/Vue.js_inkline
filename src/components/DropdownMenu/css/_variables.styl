//
// Dropdown Menu Variables
//

--dropdown-font-size := --font-size
--dropdown-font-weight := --font-weight['normal']
--dropdown-line-height := --line-height

--dropdown-margin := --spacers['1/2']

--dropdown-border-width := --border-width
--dropdown-border-radius := --border-radius

--dropdown-min-width := 200px

--dropdown-padding-sm := --spacers['1/2'] * --size-percentages['sm'] 0
--dropdown-padding-md := --spacers['1/2'] * --size-percentages['md'] 0
--dropdown-padding-lg := --spacers['1/2'] * --size-percentages['lg'] 0
--dropdown-padding := {
    'sm': --dropdown-padding-sm
    'md': --dropdown-padding-md
    'lg': --dropdown-padding-lg
}

--dropdown-item-padding-sm := --spacers['1/2'] * --size-percentages['sm'] --spacers['1'] * --size-percentages['sm']
--dropdown-item-padding-md := --spacers['1/2'] * --size-percentages['md'] --spacers['1'] * --size-percentages['md']
--dropdown-item-padding-lg := --spacers['1/2'] * --size-percentages['lg'] --spacers['1'] * --size-percentages['lg']
--dropdown-item-padding := {
    'sm': --dropdown-item-padding-sm
    'md': --dropdown-item-padding-md
    'lg': --dropdown-item-padding-lg
}

--dropdown-divider-margin-sm := --spacers['1/2'] * --size-percentages['sm'] 0
--dropdown-divider-margin-md := --spacers['1/2'] * --size-percentages['md'] 0
--dropdown-divider-margin-lg := --spacers['1/2'] * --size-percentages['lg'] 0
--dropdown-divider-margin := {
    'sm': --dropdown-divider-margin-sm
    'md': --dropdown-divider-margin-md
    'lg': --dropdown-divider-margin-lg
}

//
// Variants
//
--dropdown-variants := (monochrome)
--dropdown-variant-color-light := --variant-color-light
--dropdown-variant-color-dark := --variant-color-dark
--variants['dropdown'] = -add-variant(--dropdown-variants, { color: --color-groups })
