@require '../../css/config';
@require '../../css/mixins';
@require 'css/_variables';
@require 'css/_sizes';
@require 'css/_variants';

/**
 * Select
 */
.select
    -popup({
        margin: --select-margin,
        z-index: 2000
    })

    -popup-arrow()
    -popup-arrow-size()

    text-align: left // Ensures proper alignment if parent has it changed (e.g., modal footer)
    list-style: none
    line-height: --select-line-height
    background-clip: padding-box
    border-width: --select-border-width
    border-style: solid
    display: inline-block
    white-space: normal
    width: --select-width
    max-width: 100%

    @extend .select.-md
    @extend .select.-light

.form-input.-select input
    background: white
    color: --body-color