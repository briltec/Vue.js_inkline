@require '../../css/config';
@require '../../css/mixins';
@require '../DropdownMenu/css/_variables';
@require 'css/_sizes';
@require 'css/_variants';

.dropdown-menu > .item
    display: block;
    width: 100%
    clear: both;
    font-weight: --font-weight-normal
    text-align: inherit // For `<button>`s
    white-space: nowrap // prevent links from randomly breaking onto new lines
    background-color: transparent // For `<button>`s
    border: 0


    &.active,
    &:active
        text-decoration: none

    &.disabled,
    &:disabled
        pointer-events: none
        background-color: transparent
        background-image: none

    @extend .dropdown-menu.-light > .item
    @extend .dropdown-menu.-md > .item