//
// Breadcrumb variants
// Add the required color variants to all breadcrumb variations
//
for --variant-name, --variant in --variants['breadcrumb']
    .breadcrumb.-{--variant-name}
        > .breadcrumb-item
            if --variant-name is not 'light' and --variant-name is not 'dark'
                > a
                    color: -variant-color-by-luminance(--variant['color'], --breadcrumb-variant-color-light, --breadcrumb-variant-color-dark)
                &.-active a
                    color: -variant-color-by-luminance(--variant['color'], transparentify(--breadcrumb-variant-color-light, --variant['color'], 0.66), transparentify(--breadcrumb-variant-color-dark, --variant['color'], 0.66))

            else
                > a
                    color: -variant-color-by-luminance(--variant['color'], lighten(--link-color, 25%), --link-color)
                &.-active a
                    color: -variant-color-by-luminance(--variant['color'], --breadcrumb-variant-color-light, --breadcrumb-variant-color-dark)

            + .breadcrumb-item
                &::before
                    color: -variant-color-by-luminance(--variant['color'], transparentify(--breadcrumb-variant-color-light, --variant['color'], 0.33), transparentify(--breadcrumb-variant-color-dark, --variant['color'], 0.33))
