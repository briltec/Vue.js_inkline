/**
 * Navbar
 */

@import '../../css/config'
@import '../../css/mixins'
@import 'css/_variables'
@import 'css/_variants'
@import 'css/_sizes'

.navbar
    position: relative
    display: flex
    flex-wrap: wrap // allow us to do the line break for collapsing content
    align-items: center
    justify-content: space-between

    > .container
        display: flex
        flex-wrap: wrap
        align-items: center
        justify-content: space-between

    @extend .navbar.-md
    @extend .navbar.-light