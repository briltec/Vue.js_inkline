/**
 * Colors
 */


// Background
//
for --theme-name, --theme in --themes['background']
    ._background-{--theme-name}
        color: -text-color-by-luminance(--theme['color'], --theme-color-light, --theme-color-dark)
        background-color: --theme['color'] !important
        if --gradient-enabled and --theme['gradient']
            background-image: -linear-gradient(--theme['gradient']) !important

._background-transparent
  background-color: transparent !important


// Text
//
for --theme-name, --theme in --themes['text']
    ._text-{--theme-name}
        color: --theme['color'] !important
