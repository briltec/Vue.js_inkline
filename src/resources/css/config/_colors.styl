//
// Color Palette
//
// Basic colors, social colors and brand colors
//

$colors-red ?= #ff3b3a
$colors-orange ?= #ff962c
$colors-yellow ?= #ffce36
$colors-green ?= #2eda6c
$colors-teal ?= #4ec7f7
$colors-blue ?= #0076fa
$colors-purple ?= #5b51d2
$colors-pink ?= #ff2c59

$colors-white ?= #ffffff
$colors-gray-10 ?= #f8f9fa
$colors-gray-20 ?= #e9ecef
$colors-gray-30 ?= #dee2e6
$colors-gray-40 ?= #ced4da
$colors-gray-50 ?= #adb5bd
$colors-gray-60 ?= #868e96
$colors-gray-70 ?= #495057
$colors-gray-80 ?= #343a40
$colors-gray-90 ?= #212529
$colors-black ?= #000000

$colors-facebook ?= #3b5998
$colors-twitter ?= #1da1f2
$colors-google-plus ?= #dd4b39
$colors-dribbble ?= #ea4c89
$colors-behance ?= #1769ff
$colors-flickr ?= #ff0084
$colors-linkedin ?= #0077b5
$colors-youtube ?= #cd201f
$colors-pinterest ?= #bd081c
$colors-github ?= #333333
$colors-tumblr ?= #35465c
$colors-twitch ?= #6441a5
$colors-envato ?= #82b541

$primary ?= #0B708A
$secondary ?= #56B1BF

// Basic Colors
//
$colors ?= {
  red: $colors-red
  orange: $colors-orange
  yellow: $colors-yellow
  green: $colors-green
  teal: $colors-teal
  blue: $colors-blue
  purple: $colors-purple
  pink: $colors-pink

  white: $colors-white
  gray-10: $colors-gray-10
  gray-20: $colors-gray-20
  gray-30: $colors-gray-30
  gray-40: $colors-gray-40
  gray-50: $colors-gray-50
  gray-60: $colors-gray-60
  gray-70: $colors-gray-70
  gray-80: $colors-gray-80
  gray-90: $colors-gray-90
  black: $colors-black
}

// Brand Colors
//
$brand-colors ?= {
  primary: $primary
  secondary: $secondary
  light: $colors['white']
  dark: $colors['gray-90']
  success: $colors['green']
  danger: $colors['red']
  warning: $colors['orange']
  info: $colors['blue']
}

// Social Colors
//
$social-colors ?= {
  facebook: $colors-facebook
  twitter: $colors-twitter
  google-plus: $colors-google-plus
  dribbble: $colors-dribbble
  behance: $colors-behance
  flickr: $colors-flickr
  linkedin: $colors-linkedin
  youtube: $colors-youtube
  pinterest: $colors-pinterest
  github: $colors-github
  tumblr: $colors-tumblr
  twitch: $colors-twitch
  envato: $colors-envato
}
