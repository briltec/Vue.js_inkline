//
// Color Palette
//
// Basic colors, social colors and brand colors
//

// Basic Colors
//
$colors ?= {
  red: #ff3b3a
  orange: #ff962c
  yellow: #ffce36
  green: #2eda6c
  teal: #4ec7f7
  blue: #0076fa
  purple: #5b51d2
  pink: #ff2c59

  white: #ffffff
  gray-10: #f8f9fa
  gray-20: #e9ecef
  gray-30: #dee2e6
  gray-40: #ced4da
  gray-50: #adb5bd
  gray-60: #868e96
  gray-70: #495057
  gray-80: #343a40
  gray-90: #212529
  black: #000000
}

$primary ?= #0B708A
$secondary ?= #56B1BF

// Brand Colors
//
$brand-colors ?= {
  primary: $primary
  secondary: $secondary
  light: $colors['white']
  dark: $colors['gray-90']
  success: $colors['green']
  danger: $colors['red']
  warning: $colors['orange']
  info: $colors['blue']
}

// Social Colors
//
$social-colors ?= {
  facebook: #3b5998
  twitter: #1da1f2
  google-plus: #dd4b39
  dribbble: #ea4c89
  behance: #1769ff
  flickr: #ff0084
  linkedin: #0077b5
  youtube: #cd201f
  pinterest: #bd081c
  github: #333333
  tumblr: #35465c
  twitch: #6441a5
  envato: #82b541
}
